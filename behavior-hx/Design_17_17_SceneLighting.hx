class Design_17_17_SceneLighting extends SceneScript
{
	public var _TopLayer:Float;
	public var _DarkActor:ActorType;
	public var _LightActor:ActorType;
	
	
	public function new(dummy:Int, dummy2:Engine)
	{
		super();
		nameMap.set("Top Layer", "_TopLayer");
		_TopLayer = 0.0;
		nameMap.set("Dark Actor", "_DarkActor");
		_DarkActor = getActorType(6);
		nameMap.set("Light Actor", "_LightActor");
		_LightActor = getActorType(4);
		
	}
	
	override public function init()
	{
		
		/* ======================== When Creating ========================= */
		/* You can create the dark and light actors elsewhere, but the lights must be in front of the dark actor on the same layer. */
		createRecycledActor(_DarkActor, 0, 0, Script.FRONT);
		createRecycledActor(_LightActor, 0, 0, Script.FRONT);
		setBlendModeForLayer(Math.round(_TopLayer),BlendMode.MULTIPLY);
		
	}
	
	override public function forwardMessage(msg:String)
	{
		
	}
}